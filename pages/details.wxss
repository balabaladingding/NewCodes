.page-header{
  display: flex;
  justify-content: center;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;
}
.page-header-text{
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 40rpx;
  text-align: center;
}
.page-body{
  display: flex;
  flex: 1;
  flex-direction: column;
}
.item{
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 2rpx solid #eee;
}
.poster{
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
}
.meta{
  flex: 1;
}
.title,.sub-title{
  display: block;
  margin-bottom: 14rpx;
}
.title{
  font-size: 32rpx;
}
.sub-title{
  font-size: 22rpx;
  color: #c0c0c0;
}
.artists{
  font-size: 26rpx;
  color: #999;
}
.rating{
  font-size: 28rpx;
  font-weight: bold;
  color: red;
}